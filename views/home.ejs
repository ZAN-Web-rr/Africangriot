<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>African Griot - Home</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <div class="nav-brand">
        <a href="/">African Griot</a>
      </div>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/posts">All Posts</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>
  </nav>

  <main>
    <div class="hero">
      <div class="container">
        <h1>Welcome to African Griot</h1>
      </div>
    </div>

    <div class="container">
      <div class="create-post-section">
        <form action="/create-post" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <input type="text" name="title" placeholder="Post Title" required>
          </div>
          <div class="form-group">
            <textarea name="content" placeholder="Post Content" rows="8" required></textarea>
          </div>
          <div class="form-group">
            <input type="file" name="image" accept="image/*">
          </div>
          <button type="submit" class="btn-primary">Create Post</button>
        </form>
      </div>

      <% if (posts.length > 0) { %>
        <div class="posts-grid">
          <% posts.slice(0, 6).forEach(post => { %>
            <div class="post-card">
              <% if (post.image) { %>
                <img src="<%= post.image %>" alt="<%= post.title %>">
              <% } %>
              <div class="post-content">
                <h3><%= post.title %></h3>
                <p class="post-date"><%= post.date %></p>
                <p class="post-excerpt"><%= post.content.substring(0, 150) %>...</p>
                <a href="/post/<%= post.id %>" class="read-more">Read More</a>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="no-posts">
          <p>No posts yet. Create your first post above!</p>
        </div>
      <% } %>
    </div>
  </main>

  <footer>
    <div class="container">
      <div class="footer-content">
        <div class="social-links">
          <h3>Follow Us</h3>
          <a href="#">Facebook</a>
          <a href="#">Twitter</a>
          <a href="#">Instagram</a>
        </div>
      </div>
      <p class="copyright">&copy; <%= new Date().getFullYear() %> African Griot Blog Application</p>
    </div>
  </footer>
</body>
</html>
